@import 'mixins'
@import 'reset.css'


// General
// ------------

body
  font-family: $primary_font
  height: 100vh

.hidden
  display: none

a
  color: inherit
  text-decoration: none

textarea
  background-color: inherit
  border: 1px solid colors.box_shadow
  padding: 4px 6px
  border-radius: 3px
  width: 100%
  box-sizing: border-box
  font-size: 1.2em
  color: inherit
  resize: none

  &:focus
    outline: 0


// Header
// ------------

header
  background-color: colors.header_bg
  color: colors.heading_text
  padding: 8px
  position: relative
  text-align: center

  .searchWrapper
    float: left

    span
      margin-right: 8px

    input
      background-color: colors.search_bg
      border: 0
      border-radius: 3px
      color: colors.search_text
      font-size: 1em
      height: 25px
      padding: 0 8px
      width: 150px

  .logo
    font-family: $logo_font
    font-size: 1.5em
    vertical-align: middle

  ul
    background-color: colors.list_bg
    border-radius: 5px
    box-shadow: 0 2px 7px black
    color: colors.primary_text
    left: 30px
    position: absolute
    top: 40px
    width: 300px
    z-index: 2

    li
      card()
      margin: 8px


// Main
// ------------

main
  background-color: colors.body_bg
  height: 100%

  section:last-child
    background-color: colors.secondary_bg

    a
      color: colors.heading_text
      font-size: 1em
      margin: 0


// List
// ------------

section
  background-color: colors.list_bg
  border-radius: 5px
  float: left
  margin: 12px
  padding: 8px
  position: relative
  width: $section_width

  h1
    font-weight: bold
    font-size: 1.25em
    margin-bottom: 7px

    &:hover
      cursor: pointer

  .editListTitleInput
    width: 90%

  .addCard
    color: colors.secondary_text
    font-size: .8em

  .deleteList
    closeButton()

    &:after,
    &:before
      background-color: colors.delete_bg

  .cancelDeleteList,
  .confirmDeleteList
    position: absolute
    right: -175px
    width: 150px
    z-index: 1

  .cancelDeleteList
    greenButton()
    top: 0

  .confirmDeleteList
    deleteButton()
    top: 40px


// Card
// ------------

section
  ul
    li
      card()
      line-height: 1.25em

      &:hover
        .editTitle
          background-color: darken(colors.card_bg, 5)
          display: block

      .editTitle
        border-radius: 3px
        color: colors.secondary_text
        display: none
        padding: 3px
        position: absolute
        right: 5px
        top: 7px

        &:hover
          background-color: darken(colors.card_bg, 12)

// Card Modal
// ------------

aside
  background-color: rgba(0, 0, 0, .5)
  bottom: 0
  content: ""
  left: 0
  position: fixed
  right: 0
  top: 0
  z-index: 1

  .container
    background-color: colors.cardview_bg
    border-radius: 5px
    box-sizing: border-box
    left: 50%
    margin-left: -275px
    padding: 20px 15px
    position: absolute
    top: 60px
    width: 550px
    z-index: 2

    h1
      font-size: 1.5em
      font-weight: bold
      margin-bottom: 5px

    .closeCard
      closeButton()

    h2
      display: inline-block
      font-size: 1.15em
      font-weight: bold
      margin-bottom: 10px
      margin-top: 35px

      span
        margin-right: 10px

    p
      line-height: 1.25em

    .description
      &:hover
        .editDescription
          display: inline-block

      .editDescription
        border-radius: 3px
        color: colors.secondary_text
        display: none
        margin-left: 10px
        padding: 3px

        &:hover
          background-color: darken(colors.cardview_bg, 5)

    .comment
      card()
      margin-top: 12px

      &:hover
        background-color: colors.card_bg

    .commentDate
      color: colors.secondary_text
      font-size: .8em
      margin-top: 3px

      a
        text-decoration: underline

    .deleteButtons
      height: 40px
      margin-top: 50px
      position: relative

    .deleteCard,
    .confirmDeleteCard,
    .cancelDeleteCard
      position: absolute
      width: 150px

    .deleteCard
      deleteButton()
      left: 0

    .cancelDeleteCard
      greenButton()
      left: 175px

    .confirmDeleteCard
      deleteButton()
      left: 350px
