@import 'mixins'
@import 'reset.css'
@import 'jquery-ui.min.css'
@import 'jquery-ui.structure.min.css'


// General
// ------------

body
  color: colors.primary_text
  font-family: $primary_font

.hidden
  display: none

a
  color: inherit
  text-decoration: none

textarea
  background-color: inherit
  border: 1px solid colors.shadow
  border-radius: 3px
  box-sizing: border-box
  color: inherit
  font-size: 1.2em
  height: 5em
  margin: 4px 0
  padding: 4px 6px
  resize: none
  width: 100%

  &:focus
    outline: 0


// Header
// ------------

header
  background-color: colors.header_bg
  color: colors.off_white_text
  height: 25px
  padding: 8px
  position: fixed
  text-align: center
  width: 100vw
  z-index: 2

  .searchWrapper
    float: left

    span
      margin-right: 8px

    input
      background-color: colors.search_bg
      border: 0
      border-radius: 3px
      color: colors.white_text
      font-size: 1em
      height: 25px
      padding: 0 8px
      width: 150px

  .logo
    font-family: $logo_font
    font-size: 1.5em
    vertical-align: middle

  ul
    background-color: colors.list_bg
    border-radius: 5px
    box-shadow: 0 2px 7px black
    color: colors.primary_text
    left: 30px
    max-height: 65vh
    overflow: scroll
    position: absolute
    top: 40px
    width: 300px

    li
      card()
      margin: 8px


// Main
// ------------

main
  background-color: colors.main_bg
  box-sizing: border-box
  height: 100vh
  overflow-y: hidden
  padding-top: 40px
  white-space: nowrap

  section:last-child
    background-color: colors.secondary_bg

    .addListInput
      color: colors.off_white_text

    a
      color: colors.off_white_text
      display: inline-block
      width: 100%


// List
// ------------

section
  background-color: colors.list_bg
  border-radius: 5px
  display: inline-block
  margin: 12px
  padding: 8px
  position: relative
  vertical-align: top
  white-space: normal
  width: $section_width

  h1
    font-size: 1.25em
    font-weight: bold
    margin-bottom: 7px

    &:hover
      cursor: pointer

  .editListTitleInput
    width: 90%

  .addCard
    color: colors.secondary_text
    font-size: .8em

  .deleteList
    closeButton()

    &:after,
    &:before
      background-color: colors.delete_bg

  .cancelDeleteList,
  .confirmDeleteList
    position: absolute
    right: -175px
    width: 150px
    z-index: 1

  .cancelDeleteList
    greenButton()
    top: 0

  .confirmDeleteList
    deleteButton()
    top: 40px

  ul
    max-height: 72vh
    min-height: 25px
    overflow: scroll


// Card
// ------------

section
  ul
    li
      card()
      line-height: 1.25em

      &:hover
        .editTitle
          cursor: pointer
          display: block

      .editTitle
        background-color: darken(colors.card_bg, 5)
        border-radius: 3px
        color: colors.secondary_text
        display: none
        padding: 3px
        position: absolute
        right: 5px
        top: 7px

        &:hover
          background-color: darken(colors.card_bg, 12)

// Card Modal
// ------------

aside
  background-color: rgba(0, 0, 0, .5)
  bottom: 0
  content: ""
  left: 0
  position: fixed
  right: 0
  top: 0
  z-index: 3

  .container
    background-color: colors.cardview_bg
    border-radius: 5px
    box-sizing: border-box
    left: 50%
    margin-left: -275px
    max-height: 85vh
    overflow: scroll
    padding: 20px 15px
    position: absolute
    top: 60px
    width: 550px

    h1
      font-size: 1.5em
      font-weight: bold
      margin-bottom: 5px

      &:hover
        cursor: pointer

    .editCardTitleInput
      width: 90%

    .closeCard
      closeButton()

    h2
      display: inline-block
      font-size: 1.15em
      font-weight: bold
      margin-bottom: 10px
      margin-top: 35px

      span
        margin-right: 10px

    h1,
    p
      line-height: 1.25em

    .description
      &:hover
        .editDescription
          display: inline-block

      .editDescription
        border-radius: 3px
        color: colors.secondary_text
        display: none
        margin-left: 10px
        padding: 3px

        &:hover
          background-color: darken(colors.cardview_bg, 5)

    .comment
      card()
      margin-top: 12px

      &:hover
        background-color: colors.card_bg

    .commentDate
      color: colors.secondary_text
      font-size: .8em
      margin-top: 3px

      a
        text-decoration: underline

    .deleteButtons
      height: 40px
      margin-top: 50px
      position: relative

    .deleteCard,
    .confirmDeleteCard,
    .cancelDeleteCard
      position: absolute
      width: 150px

    .deleteCard
      deleteButton()
      left: 0

    .cancelDeleteCard
      greenButton()
      left: 175px

    .confirmDeleteCard
      deleteButton()
      left: 350px


// Media Queries
// -------------

@media (max-height: 700px)
  section
    ul
      max-height: 65vh
