<a href="#" class="closeCard">Close</a>
<h1>{{title}}</h1>
<input class="editCardTitleInput hidden">

<div class="description">
  <h2><span class="fa fa-align-left" aria-hidden="true"></span>Description</h2><a href="#" class="editDescription fa fa-pencil"></a>
  <p class="descriptionText">{{description}}</p>
  <input class="editDescriptionInput hidden">
</div>

<h2><span class="fa fa-comment-o" aria-hidden="true"></span>Add a Comment</h2>
<input class="addCommentInput" name="comment" placeholder="Write a comment...">

<ul>
  {{#each comments}}
    <li data-index="{{@index}}">
      <p class="comment">{{this.text}}</p>
      <input class="editCommentInput hidden">
      <p class="commentDate">on {{formatDate this.date}} - <a href="#" class="editComment">Edit</a> - <a href="#" class="deleteComment">Delete</a></p>
    </li>
  {{/each}}
</ul>

<div class="deleteButtons">
  <a href="#" class="deleteCard">Delete Card</a>
  <a href="#" class="cancelDeleteCard hidden">Cancel Delete</a>
  <a href="#" class="confirmDeleteCard hidden">Confirm Delete</a>
</div>
