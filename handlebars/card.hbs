<h1>{{title}}</h1>
<input class="editCardTitleInput hidden">

<p>Description <a href="#" class="editDescription">Edit</a></p>
<p class="description">{{description}}</p>
<input class="editDescriptionInput hidden">

<label for="comment">Add a Comment</label>
<input class="addCommentInput" name="comment" placeholder="Write a comment...">

<ul>
  {{#each comments}}
    <li data-index="{{@index}}">
      <p class="comment">{{this.text}}</p>
      <input class="editCommentInput hidden">
      <p>on {{formatDate this.date}} <a href="#" class="editComment">Edit</a> <a href="#" class="deleteComment">Delete</a></p>
    </li>
  {{/each}}
</ul>
